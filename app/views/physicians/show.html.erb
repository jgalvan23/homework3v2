<p id="notice"><%= notice %></p>

<p>
  <h2>
  <strong>Name:</strong>
  <%= @physician.name %>
  </h2>

</p>
<p>
  <h2>
  <strong>Specialty:</strong>
  <%= @physician.specialty %>
</h2>
</p>

  <h3>Office Locations</h3>
  <ul>
    <% @physician.offices.each do |office|%>
          <li>
            Address: <%= office.address %> , 
            <%= office.zip %>
            <p>Phone Number: <%= office.phone %> </p>
          </li> 
    <% end %>
  </ul>
  <h3>Current Appointments</h3>
  <ul>
      <% @physician.appointments.each do |appointment|%>
            <li>
                <%= appointment.visit %>
                <p>Patient: <%= appointment.patient.name %></p>
            </li> 
      <% end %>
    </ul>

  
  <%= link_to 'Edit', edit_physician_path(@physician) %> |
  <%= link_to 'Back', physicians_path %>

